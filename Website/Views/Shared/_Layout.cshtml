<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="League of Legends Stats, LoL Guide, MMR, LoL In Game, Statistics, LoL Spectate, Leaderboards, Chart, Champion Guide, Champion Build, LOLKing, Champion Counter" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CottontailSummoner</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tablesorter")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header"> <a class="navbar-brand" href="#">CottontailSummoners</a> </div>
            <div id="navbar">
                <ul class="nav navbar-nav">
                    <li class="@ViewBag.Home"><a href="/">Home</a></li>
                    <li class="@ViewBag.Leaderboards"><a href="~/Leaderboards">Leaderboards</a></li>
                </ul>
            </div>
            <form role="form" class="form-inline navbar-form navbar-right" method="post">
                <div class="form-group">
                    <input style="width: 250px; border-radius: 0px; border-width: 1px 0px 1px 1px; float: left;" placeholder="Summoner Name" class="form-control" type="text" name="summonername">
                    <select class="form-control region-select" id="region" name="region">
                        <option value="na">NA</option>
                        <option selected="" value="euw">EUW</option>
                        <option value="eune">EUNE</option>
                        <option value="kr">KR</option>
                        <option value="las">LAS</option>
                        <option value="lan">LAN</option>
                        <option value="br">BR</option>
                        <option value="oce">OCE</option>
                        <option value="tr">TR</option>
                        <option value="ru">RU</option>
                        <option value="jp">JP</option>
                    </select>
                </div>
                <div class="form-group">
                    <!--<input style="border-radius:0px;" value="Search" name="search" type="submit">-->
                    <button style="border-radius:0px;" class="btn btn-default" type="submit">Search</button>
                </div>
            </form>
        </div>
    </nav>
    @RenderBody()
    <footer id="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10"> CottontailSummoners isn’t endorsed by Riot Games and doesn’t reflect the views or opinions of Riot Games or anyone officially involved in producing or managing League of Legends. League of Legends and Riot Games are trademarks or registered trademarks of Riot Games, Inc. League of Legends © Riot Games, Inc. </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/custom")
</body>
</html>